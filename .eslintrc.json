{
    "env": {
        "browser": true,
        "es6": true,
    	  "node": true,
	      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-nested-ternary": "error",
        "space-infix-ops": "error"
    }
}
